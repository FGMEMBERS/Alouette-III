<?xml version="1.0"?>

<PropertyList>
	<fx>
		<engine>
			<name>engine</name>
			<mode>looped</mode>
			<path>Sounds/helicopter.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>rotors/main/rpm</property>
						<value>.5</value>
					</greater-than>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<factor>.2</factor>
			</volume>
			<pitch>
				<property>rotors/main/rpm</property>
				<factor>0.01</factor>
				<max>4.5</max>
			</pitch>
		</engine>

		<overspeed>
			<name>overspeed</name>
			<mode>looped</mode>
			<path>Sounds/overspeed.wav</path>
			<condition>
				<greater-than>
					<property>velocities/airspeed-kt</property>
					<value>146</value>
				</greater-than>
			</condition>
			<volume>
				<factor>.8</factor>
			</volume>
			<pitch>
				<factor>2</factor>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</overspeed>

		<contact>
			<name>ground contact</name>
			<mode>transient</mode>
			<path>Sounds/helicopter-skid.wav</path>
			<condition>
				<or>
					<property>gear/gear[0]/wow</property>
					<property>gear/gear[1]/wow</property>
					<property>gear/gear[2]/wow</property>
					<property>gear/gear[3]/wow</property>
				</or>
			</condition>
			<volume>
				<factor>.8</factor>
			</volume>
			<pitch>
				<factor>2</factor>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</contact>

		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>Sounds/wind.wav</path>
			<condition>
				<and>
					<property>velocities/airspeed-kt</property>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<property>position/altitude-ft</property>
				<factor>-0.000015</factor>
				<offset>1.0</offset>
				<min>0.1</min>
				<max>1.0</max>
			</volume>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.0015</factor>
				<min>0.03</min>
				<max>0.25</max>
			</volume>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<offset>1.25</offset>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</wind>

		<crash>
			<name>intense ground contact</name>
			<mode>transient</mode>
			<path>Sounds/crash.wav</path>
			<property>sim/crashed</property>
			<volume>
				<factor>1</factor>
			</volume>
			<pitch>
				<factor>1.5</factor>
			</pitch>
		</crash>
	</fx>
</PropertyList>
