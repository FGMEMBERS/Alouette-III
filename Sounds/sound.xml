<?xml version="1.0"?>

<PropertyList>
	<fx>
		<engine>
			<name>engine</name>
			<mode>looped</mode>
			<path>Sounds/helicopter.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>fdm/jsbsim/animation/rotor0-rotation</property>
						<value>2</value>
					</greater-than>
					<greater-than>
					    <property>fdm/jsbsim/propulsion/engine/engine-rpm</property>
					    <value>1000</value>
					</greater-than>
					<not>
						<property>fdm/jsbsim/systems/crash-detect/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<factor>.2</factor>
			</volume>
			<pitch>
				<property>fdm/jsbsim/animation/rotor0-rotation</property>
				<factor>0.01</factor>
				<max>4.5</max>
			</pitch>
		</engine>

		<turbine-startup>
			<mode>transient</mode>
			<path>Sounds/turbine_start.wav</path>
			<name>turbine-startup</name>
			<condition>
				<and>
					<greater-than>
					    <property>fdm/jsbsim/propulsion/engine/engine-rpm</property>
					    <value>100</value>
					</greater-than>
					<equals>
						<property>/controls/engines/engine[0]/cutoff</property>
						<value>0</value>
					</equals>
					<not>
						<property>fdm/jsbsim/systems/crash-detect/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<factor>0.2</factor>
			</volume>
		</turbine-startup>

		<turbine-shutdown>
			<mode>transient</mode>
			<path>Sounds/turbine_shutdown.wav</path>
			<name>turbine-shutdown</name>
			<condition>
				<and>
					<less-than>
					    <property>fdm/jsbsim/propulsion/engine/engine-rpm</property>
					    <value>5000</value>
					</less-than>
					<equals>
						<property>/controls/engines/engine[0]/cutoff</property>
						<value>1</value>
					</equals>
					<greater-than>
						<property>fdm/jsbsim/animation/rotor0-rotation</property>
						<value>5</value>
					</greater-than>
					<not>
						<property>fdm/jsbsim/systems/crash-detect/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<factor>0.2</factor>
			</volume>
		</turbine-shutdown>

		<turbine>
			<mode>looped</mode>
			<path>Sounds/turbojet_fan.wav</path>
			<name>turbine</name>
			<condition>
				<and>
					<greater-than>
					    <property>fdm/jsbsim/propulsion/engine/engine-rpm</property>
					    <value>5000</value>
					</greater-than>
					<less-than>
					    <property>fdm/jsbsim/propulsion/engine/engine-rpm</property>
					    <value>21000</value>
					</less-than>
					<not>
						<property>fdm/jsbsim/systems/crash-detect/crashed</property>
					</not>
				</and>
			</condition>
			<pitch>
				<min>0.5</min>
			</pitch>
			<volume>
				<min>0.1</min>
				<max>0.1</max>
			</volume>
		</turbine>

		<overspeed>
			<name>overspeed</name>
			<mode>looped</mode>
			<path>Sounds/overspeed.wav</path>
			<condition>
				<greater-than>
					<property>velocities/airspeed-kt</property>
					<value>146</value>
				</greater-than>
			</condition>
			<volume>
				<factor>.8</factor>
			</volume>
			<pitch>
				<factor>2</factor>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</overspeed>

		<contact>
			<name>ground contact</name>
			<mode>transient</mode>
			<path>Sounds/helicopter-skid.wav</path>
			<condition>
				<or>
					<property>gear/gear[0]/wow</property>
					<property>gear/gear[1]/wow</property>
					<property>gear/gear[2]/wow</property>
					<property>gear/gear[3]/wow</property>
				</or>
			</condition>
			<volume>
				<factor>.8</factor>
			</volume>
			<pitch>
				<factor>2</factor>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</contact>

		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>Sounds/wind.wav</path>
			<condition>
				<and>
					<property>velocities/airspeed-kt</property>
					<not>
						<property>fdm/jsbsim/systems/crash-detect/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<property>position/altitude-ft</property>
				<factor>-0.000015</factor>
				<offset>1.0</offset>
				<min>0.1</min>
				<max>1.0</max>
			</volume>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.0015</factor>
				<min>0.03</min>
				<max>0.25</max>
			</volume>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<offset>1.25</offset>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</wind>

		<rain>
			<name>rain</name>
			<mode>looped</mode>
			<path>Sounds/rain-windshield.wav</path>
			<condition>
				<and>
					<greater-than>
					<property>/environment/rain-norm</property>
					<value>0.3</value>
					</greater-than>
					<not>
						<property>fdm/jsbsim/systems/crash-detect/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<property>/environment/rain-norm</property>
				<factor>0.3</factor>
				<min>0.0</min>
				<max>0.5</max>
			</volume>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</rain>

		<crash>
			<name>intense ground contact</name>
			<mode>transient</mode>
			<path>Sounds/crash.wav</path>
			<property>fdm/jsbsim/systems/crash-detect/crashed</property>
			<volume>
				<factor>1</factor>
			</volume>
			<pitch>
				<factor>1.5</factor>
			</pitch>
		</crash>
	</fx>
</PropertyList>
