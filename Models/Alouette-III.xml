        <animation>
            <type>select</type>
            <object-name>Queue-Disc_M</object-name>
            <condition>
                <not>
                    <equals>
                        <property>sim/current-view/view-number</property>
                        <value>0</value>
                    </equals>
                </not>
            </condition>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Rotor-Pales-Queue</object-name>
            <condition>
                <not>
                    <equals>
                        <property>sim/current-view/view-number</property>
                        <value>0</value>
                    </equals>
                </not>
            </condition>
        </animation>






	<animation>
  		<type>select</type>
  		<object-name>Rotor-Pales-Queue</object-name>
  			<condition>
   				<less-than>
    			<property>/rotors/tail/rpm</property>
    			<value>1600</value>
   				</less-than>
  			</condition>
 	</animation>






	<animation>
		<condition>
			<greater-than>
				<property>rotors/tail/rpm</property>
				<value>1100</value>
			</greater-than>
		</condition>
		<type>noshadow</type>
		<object-name>Rotor-Pales-Queue</object-name>
		<object-name>Rotor-Queue-Tete</object-name>
 	</animation>


	<animation>
		<type>blend</type>
		<object-name>Rotor-Pales-Queue</object-name>
		<object-name>Rotor-Queue-Tete</object-name>
		<property>rotors/tail/rpm</property>
		<offset>-0.2</offset>
		<factor>0.0009</factor>
		<min>0.20</min>
	</animation>



	<animation>
		<type>rotate</type>
		<object-name>Rotor-Pales-Queue</object-name>
                <object-name>Rotor-Queue-Tete</object-name>
		<property>rotors/tail/blade[1]/position-deg</property>
		<center>
			<x-m>6.2582</x-m>
			<y-m>0</y-m>
			<z-m>0.437969</z-m>
		</center>
		<axis>
			<x>0.08748866352592399637</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>



	<animation>
		<type>blend</type>
		<object-name>Queue-Disc_M</object-name>
		<property>rotors/tail/rpm</property>
		<offset>1.2</offset>
		<factor>-0.0005</factor>
		<!--<max>0.15</max>-->
	</animation>



	<animation>
		<type>rotate</type>
		<object-name>Queue-Disc_M</object-name>
		<property>/sim/time/elapsed-sec</property>

		<factor>100</factor>
		<center>
			<x-m>6.2582</x-m>
			<y-m>0</y-m>
			<z-m>0.437969</z-m>
		</center>
		<axis>
			<x>0.08748866352592399637</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
        <type>rotate</type>
        <object-name>HGouv</object-name>
        <property>surface-positions/elevator-pos-norm</property>
        <factor>6</factor>
        <center>
            <x-m>4.94566</x-m>
            <y-m>0.0</y-m>
            <z-m>0.276419</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
    </animation>

