        <!--ALPHA HIERARCHY=================-->
        <animation>
                <name>Alpha</name>
                <object-name>Rotor-Pale</object-name>
                <object-name>Rotor-PaleD</object-name>
                <object-name>Rotor-Pale-Base</object-name>
                <object-name>Rotor-Pale-Fix</object-name>
                <object-name>Rotor-Pale-Rot</object-name>
                <object-name>Rotor-Disc_M-Pale</object-name>
        </animation>

        <!--BLEND===================-->

        <animation>
		<type>blend</type>
		<object-name>Rotor-Pale</object-name>
                <property>rotors/main/rpm</property>
		<factor>0.0035</factor>
	</animation>

         <animation>
		<type>blend</type>
                <object-name>Rotor-PaleD</object-name>
		<property>rotors/main/rpm</property>
		<factor>0.0027</factor>
	</animation>

        <animation>
		<type>blend</type>
                <object-name>Rotor-Pale-Base</object-name>
                <object-name>Rotor-Pale-Fix</object-name>
		<property>rotors/main/rpm</property>
		<factor>0.0025</factor>
	</animation>

        <!--NOSHADOW=====================-->

        <animation>
		<condition>
			<greater-than>
				<property>rotors/main/rpm</property>
				<value>150</value>
			</greater-than>
		</condition>
		<type>noshadow</type>
                <object-name>Rotor-Pale</object-name>
 	</animation>

        <animation>
		<condition>
			<greater-than>
				<property>rotors/main/rpm</property>
				<value>160</value>
			</greater-than>
		</condition>
		<type>noshadow</type>
                <object-name>Rotor-PaleD</object-name>
 	</animation>

        <animation>
		<type>noshadow</type>
                <object-name>Rotor-Disc_M-Pale</object-name>
 	</animation>

