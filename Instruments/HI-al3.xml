<PropertyList>

	<path>Models/hi_nu-al3.ac</path>
	<texture-path>Models/Textures</texture-path>

	<animation>
		<type>noshadow</type>
		<object-name>HI</object-name>
	</animation>

	<model>
		<name>BoutonG</name>
		<path>Aircraft/Alouette-III/Instruments/Bouton_pt-Nord.xml</path>
		<offsets>
                    <x-m>0.016</x-m>
                    <y-m>-0.035</y-m>
                    <z-m>-0.035</z-m>
                    <pitch-deg>0</pitch-deg>
		</offsets>
	</model>

        <model>
            <name>BoutonD</name>
            <path>Aircraft/Alouette-III/Instruments/Bouton_pt-Nord.xml</path>
            <offsets>
                <x-m>0.016</x-m>
                <y-m>0.035</y-m>
                <z-m>-0.035</z-m>
                <pitch-deg>0</pitch-deg>
            </offsets>
	</model>







	<animation include="Instrument-Light4.xml">
		<object-name>Aiguille1</object-name>
		<object-name>Aiguille2</object-name>
	</animation>

	<animation include="Instrument-Light1.xml">
		<object-name>Cadran</object-name>
	</animation>

	



	<animation>
		<type>rotate</type>
		<object-name>Cadran</object-name>
		<property>instrumentation/heading-indicator/indicated-heading-deg</property>
		<factor>1</factor>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>



<!--FIXME offset-->

        <animation>
            <type>pick</type>
            <object-name>BoutonD</object-name>
            <action>
                <button>0</button>
                <repeatable>true</repeatable>
                <binding>
                    <command>property-adjust</command>
                    <property>instrumentation/heading-indicator/offset-deg</property>
                    <step>0.1</step>
                    <min>0</min>
                    <max>6</max>
                    <wrap>1</wrap>
                </binding>
            </action>
            <action>
                <button>1</button>
                <repeatable>true</repeatable>
                <binding>
                    <command>property-adjust</command>
                    <property>instrumentation/heading-indicator/offset-deg</property>
                    <step>-0.1</step>
                    <min>0</min>
                    <max>6</max>
                    <wrap>1</wrap>
                </binding>
            </action>
        </animation>


        <animation>
            <type>rotate</type>
            <object-name>BoutonD</object-name>
            <property>instrumentation/heading-indicator/offset-deg</property>
            <factor>1</factor>
            <center>
                <x-m>0.0</x-m>
                <y-m>0.035</y-m>
                <z-m>-0.035</z-m>
            </center>
            <axis>
                <x>1</x>
                <y>0</y>
                <z>0</z>
            </axis>
	</animation>






