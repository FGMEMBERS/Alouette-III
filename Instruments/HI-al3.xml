	<animation>
		<type>rotate</type>
		<object-name>Aiguille2</object-name>
		<property>instrumentation/heading-indicator/indicated-heading-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Aiguille2</object-name>
                <property>/instrumentation/heading-indicator/heading-bug-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>


        <animation>
            <type>pick</type>
            <object-name>BoutonG</object-name>
            <action>
                <button>0</button>
                <repeatable type="bool">true</repeatable>
                <binding>
                    <command>property-adjust</command>
                    <property>/instrumentation/heading-indicator/heading-bug-deg</property>
                    <step>1</step>
                    <min>0</min>
                    <max>360</max>
                    <wrap>1</wrap>
                </binding>
            </action>
            <action>
                <button>1</button>
                <repeatable type="bool">true</repeatable>
                <binding>
                    <command>property-adjust</command>
                    <property>/instrumentation/heading-indicator/heading-bug-deg</property>
                    <step>-1</step>
                    <min>0</min>
                    <max>360</max>
                    <wrap>1</wrap>
                </binding>
            </action>
        </animation>

        <animation>
            <type>rotate</type>
            <object-name>BoutonG</object-name>
            <property>/instrumentation/heading-indicator/heading-bug-deg</property>
            <factor>-5</factor>
            <center>
                <x-m>0.0</x-m>
                <y-m>-0.035</y-m>
                <z-m>-0.035</z-m>
            </center>
            <axis>
                <x>1</x>
                <y>0</y>
                <z>0</z>
            </axis>
	</animation>



