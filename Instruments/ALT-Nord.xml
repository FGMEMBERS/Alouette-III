<PropertyList>

 <path>Models/alt-nord.ac</path>
 <texture-path>Models/Textures</texture-path>


        <model>
                <name>Bouton</name>
                <path>Aircraft/S-51-Dragonfly/Instruments/Bouton_pt-Nord.xml</path>
                <offsets>
                    <x-m>0.016</x-m>
                    <y-m>-0.030431</y-m>
                    <z-m>-0.030431</z-m>
                    <pitch-deg>0</pitch-deg>
                </offsets>
        </model>

        <animation include="Instrument-Light4.xml">
                <object-name>Aiguille</object-name>
        </animation>

        <animation include="Instrument-Light3.xml">
                <object-name>Cadran</object-name>
        </animation>

        <animation include="Instrument-Light3.xml">
                <object-name>Ft-m</object-name>
                <object-name>Ft-dm</object-name>
                <object-name>Ft-minus</object-name>
        </animation>

        <animation include="Instrument-Light3.xml">
                <object-name>Tambour</object-name>
        </animation>

        <animation include="Instrument-Light3.xml">
                <object-name>PA-cc</object-name>
                <object-name>PA-dc</object-name>
                <object-name>PA-un</object-name>
                <object-name>PA-di</object-name>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>Aiguille</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                <factor>-0.36</factor>
                <axis>
                        <x>1</x>
                        <y>0</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>textranslate</type>
                <object-name>Ft-m</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                <factor>0.0001</factor>
                <step>1000</step>
                <scroll>1</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <condition>
                        <not>
                                <less-than>
                                        <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                                        <value>0</value>
                                </less-than>
                        </not>
                </condition>
                <type>select</type>
                <object-name>Ft-dm</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
        </animation>

        <animation>
                <condition>
                                <less-than>
                                        <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                                        <value>0</value>
                                </less-than>
                </condition>
                <type>select</type>
                <object-name>Ft-minus</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
        </animation>

        <animation>
                <type>textranslate</type>
                <object-name>Ft-dm</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                <factor>0.00001</factor>
                <step>10000</step>
                <scroll>1</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>Bouton</object-name>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <factor>1000</factor>
                <center>
                        <x-m>0</x-m>
                        <y-m>-0.030431</y-m>
                        <z-m>-0.030431</z-m>
                </center>
                <axis>
                        <x>-1</x>
                        <y>0</y>
                        <z>0</z>
                </axis>
        </animation>



        <animation>
                <type>textranslate</type>
                <object-name>PA-cc</object-name>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <factor>10</factor>
                <step>0.01</step>
                <scroll>0.000001</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>textranslate</type>
                <object-name>PA-dc</object-name>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <factor>1</factor>
                <step>0.1</step>
                <scroll>0.00001</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>textranslate</type>
                <object-name>PA-un</object-name>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <factor>0.1</factor>
                <step>1</step>
                <scroll>0.0001</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>textranslate</type>
                <object-name>PA-di</object-name>
                <property>/instrumentation/altimeter/setting-inhg</property>
                <factor>0.01</factor>
                <step>10</step>
                <scroll>0.001</scroll>
                <axis>
                        <x>0</x>
                        <y>-1</y>
                        <z>0</z>
                </axis>
        </animation>

        <animation>
                <type>rotate</type>
                <object-name>Tambour</object-name>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                <factor>0.36</factor>
                <center>
                        <x-m>-0.000722533</x-m>
                        <y-m>0</y-m>
                        <z-m>0</z-m>
                </center>
                <axis>
                        <x>0</x>
                        <y>1</y>
                        <z>0</z>
                </axis>
        </animation>



</PropertyList>