<PropertyList>

	<path>Models/light-bezel_tpt-s51.ac</path>
	<texture-path>Models/Textures</texture-path>

        <animation>
            <name>Instrument_Light</name>
            <type>light</type>
            <light-type>spot</light-type>
            <object-name>glass_light</object-name>
            <position>
                <x> 0.07</x>
                <y> 0.00 </y>
                <z>-0.00</z>
            </position>
            <direction>
                <x> -1.0 </x>
                <y>  0.0 </y>
                <z>  0.1 </z>
            </direction>
            <ambient>
                <r>  0.01 </r>
                <g>  0.01</g>
                <b>  0.01 </b>
                <a>  1.0 </a>
            </ambient>
            <diffuse>
                <r>  0.5 </r>
                <g>  0.3 </g>
                <b>  0.2 </b>
                <a>  1.0 </a>
            </diffuse>
            <specular>
                <r>  1.0 </r>
                <g>  1.0 </g>
                <b>  1.0 </b>
                <a>  1.0 </a>
            </specular>
            <attenuation>
                <c>  0.2 </c>
                <l>  0.1 </l>
                <q>  0.1 </q>
            </attenuation>
            <exponent>  8 </exponent>
            <cutoff>   90  </cutoff>
            <near-m>    0.0   </near-m>
            <far-m>     0.3 </far-m>
            <dim-factor>
                <property>fdm/jsbsim/electrical/lighting/instruments-norm</property>
            </dim-factor>
        </animation>

        <animation>
            <type>select</type>
            <object-name>Instrument_Light</object-name>
            <condition>
                <and>
                    <property>fdm/jsbsim/electrical/lighting/instruments</property>
                    <!--<property>sim/rendering/rembrandt</property>-->
                </and>
            </condition>
        </animation>




</PropertyList>