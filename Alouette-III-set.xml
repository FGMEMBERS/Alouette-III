<PropertyList>
 <sim>
	<description>Alouette_III_Helicopter</description>
        <author>Gerard Robin</author>
        <status>alpha, "GPL Copyright"</status>
        <version> 0.1</version>
	<flight-model>yasim</flight-model>
	<aero>alouetteIII</aero>
        <startup>
	<splash-texture>Aircraft/Alouette-III/splash.rgb</splash-texture>
        </startup>
	<fuel-fraction>0.8</fuel-fraction>
	<sound>
		<path>Aircraft/Alouette-III/Sounds/bell206-sound.xml</path>
	</sound>




  <hud>
      <enable3d>false</enable3d>
       <visibility archive="n">false</visibility>
  </hud>

  <model>
    <path archive="y">Aircraft/Alouette-III/Models/Alouette-III.xml</path>
                    <al3>
                            <nav-lights type="bool">true</nav-lights>
                            <state type="int">0</state>
                            <rotor-step-deg type="float">0.0</rotor-step-deg>
                    </al3>
  </model>

  <view>
        <internal archive="y">true</internal>
           <config>
                     <x-offset-m archive="y">0.556831</x-offset-m><!--right-->
                     <y-offset-m archive="y">0.59</y-offset-m><!--up-->
                     <z-offset-m archive="y">-1.65</z-offset-m><!--back-->
                     <pitch-offset-deg>-12</pitch-offset-deg>
                     <default-field-of-view-deg type="double">73.0</default-field-of-view-deg>
           </config>
  </view>
  <chase-distance-m type="double">-20.0</chase-distance-m>
    <weight n="0">
            <name>Pilot+passengers</name>
            <weight-lb>800</weight-lb>
            <max-lb>1000</max-lb>
    </weight>

    <help include="Help/Alouette-III-help.xml"/>

 </sim>


 <controls>
	<flight>
                <aileron-trim>-0.00000</aileron-trim>
                <rudder-trim>-0.0000</rudder-trim>
		<wing-fold>0</wing-fold>
	</flight>
	<engines>
                <engine n="0">
                        <magnetos>0</magnetos>
                        <rotorgear>0</rotorgear>
                        <master-bat>false</master-bat>
                        <throttle>1</throttle>
                </engine>
                <engine n="1">
                        <throttle>1</throttle>
                </engine>
	</engines>
        <gear>
                <brake-parking type="double">1.0</brake-parking>
        </gear>
        <rotor>
            <brake>1</brake>
            <fold-pos>0</fold-pos>
            <folded>0</folded>
        </rotor>
        <electric>
            <master-switch>false</master-switch>
            <battery-switch>false</battery-switch>
        </electric>
        <switches>
            <landing-light>true</landing-light>
            <master-avionics>false</master-avionics>
        </switches>
        <lighting>
            <instruments-norm type="double">0.4</instruments-norm>
        </lighting>
 </controls>





	<input include="Inputs/Alouette-III-input.xml"/>



	<nasal>
                <electrical>
                        <file>Aircraft/Alouette-III/System/electrical.nas</file>
                </electrical>
		<al3>
			<file>Aircraft/Alouette-III/System/al3.nas</file>
		</al3>
	</nasal>


</PropertyList>
